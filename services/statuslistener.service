[Unit]
Description=X22 Status Listener Service
After=network.target

[Service]
Type=simple
ExecStart=x22_status --credentials=/etc/axiamo_transfer/credentials.json
Restart=on-failure
User=axiamo
WorkingDirectory=/var/axiamo_transfer/logs
Environment="PATH=/usr/bin"
StandardOutput=append:/var/log/x22_status_listener.log
StandardError=append:/var/log/x22_status_listener.log

[Install]
WantedBy=multi-user.target
